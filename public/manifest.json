{
  "name": "LangFluency",
  "manifest_version": 3,
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["./assets/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["./assets/youtube.js"],
      "all_frames": true
    }
  ],
  "permissions": ["storage", "downloads", "alarms"],
  "host_permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["/assets/*"],
      "matches": ["https://*.youtube.com/watch*", "https://youtube.com/watch*"]
    }
  ]
}
