{
  "name": "StreamFluency",
  "manifest_version": 3,
  "version": "0.0.6",
  "description": "Learn languages by watching videos with dual-language subtitles",
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@streamfluency.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "128": "icon.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "StreamFluency",
    "default_icon": "icon.svg"
  },
  "background": {
    "scripts": ["assets/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["assets/youtube.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": ["storage", "downloads", "alarms"],
  "host_permissions": ["https://*.youtube.com/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/app.js",
        "assets/app.css",
        "assets/*.svg",
        "assets/*.png",
        "assets/*.jpg"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ]
}
